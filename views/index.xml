<Alloy>
	<Window class="container">
		<View id="menu" onClick="showhidemenu">
			<View id="categoryHeader">
				<Label id="menutitle" onClick="onCategoryClick">Categor√≠as</Label>
			</View>
			<TableView id="categories" onClick="onCategoryClick"></TableView>
		</View>
		<View id="main">
			<View id="iconBar">
				<ImageView id="menubtn" onClick="showhidemenu" bubbles="false"></ImageView>
				<Label id="currentcategory">Todas/All</Label>
			</View>
			<TableView id="mainList" onClick="onItemRowClick"></TableView>
		</View>
		<View id="itemView" class="itemviewcontainer">
			<View id="closebutton" onClick="onItemViewClick"></View>
			<ScrollView id="itemScrollView">
				<ImageView id="itemImage"></ImageView>
				<Label id="itemName"></Label>
				<Label id="itemDescription"></Label>
				<Label id="itemContact"></Label>
				<Label id="itemPhone"></Label>
				<Label id="itemPrice"></Label>
			</ScrollView>
		</View>
	</Window>
</Alloy>